<Page x:Class="ProjectNetra.Mail.MessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectNetra.Mail"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MessagePage" Width="642" Height="396">

    <Grid>
        <StackPanel Name="messageStack" Background="White">
            
            <TextBlock Name="subject" FontSize="15" Margin="0, 5" />
            
            <TextBlock Name="time" FontSize="10" />
            
            <TextBlock Name="body" Margin="0, 5" />
            
            <TextBlock Name="attachments" FontFamily="10" />
            
        </StackPanel>
    </Grid>
</Page>
