<Page x:Class="ProjectNetra.File_Manager_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectNetra"
      mc:Ignorable="d" 
      d:DesignHeight="403.944" d:DesignWidth="467.53"
      Title="File_Manager_Page">

    <Grid Margin="10">
        <ListBox Name="LB" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding IconPath}" Margin="0,0,5,0" Width="30" Height="30" />
                            <TextBlock Text="{Binding Folder}" />
                        </StackPanel>
                        
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
